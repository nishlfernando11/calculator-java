    double total=0;
    double num=0;
    
    private void numberActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_numberActionPerformed
        // TODO add your handling code here:
    }//GEN-LAST:event_numberActionPerformed
    
    private void addActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addActionPerformed
        try{
        num=new Double(number.getText());
        if(!isNumeric(number.getText())){
            JOptionPane.showMessageDialog(null,"Invalid Input!", "Alert: " + "Addition Calculator", JOptionPane.INFORMATION_MESSAGE);
        }
        else{ 
        if(number.getText().equals("0.0"))
            Toolkit.getDefaultToolkit().beep();
        number.setText("");
        total=total+num;
        }
        }catch(NumberFormatException e){
            number.setText("");
        }
        
    }//GEN-LAST:event_addActionPerformed

    private void cancelActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_cancelActionPerformed
        number.setText("");
        total=0;
    }//GEN-LAST:event_cancelActionPerformed

    private void equalActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_equalActionPerformed
        try{
        num=new Double(number.getText());
        total=total+num;
        number.setText(new Double(total).toString());
        }catch(NumberFormatException e){
            number.setText(new Double(total).toString());
        }
        total=0;
    }//GEN-LAST:event_equalActionPerformed

    private void clearActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_clearActionPerformed
        number.setText("");
    }//GEN-LAST:event_clearActionPerformed
    public static boolean isNumeric(String inputData) {
      return inputData.matches("[-+]?\\d+(\\.\\d+)?");
    }
